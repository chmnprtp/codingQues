// C++
#include<iostream>
using namespace std;
int main()
{
    int n;
    cout<<"enter a number to check even or odd";
    cin>>n;
    
        if(n%2==0)
        {
            cout<<"Number is Even";
        }
        else
        {
            cout<<"Number is Odd";
        }
}


// js
let n = 5;

if(n%2==0)
{
    console.log("Number is even");
}
else
{
    console.log("Number is odd");
}


//python
